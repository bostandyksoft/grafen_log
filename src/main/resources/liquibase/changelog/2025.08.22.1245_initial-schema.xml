<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2025.08.22.1245 init (1)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="global_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="global_seq" incrementBy="1" minValue="0"/>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (1.5)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_person"/>
            </not>
        </preConditions>
        <createTable tableName="log_person" remarks="Карточка личной информации о человеке">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="full_name" type="varchar(100)" remarks="ФИО">
                <constraints nullable="false" notNullConstraintName="nn_person_fio"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 users" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_user"/>
            </not>
        </preConditions>
        <createTable tableName="log_user" remarks="Карточка аутентификационной информации">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(100)" remarks="Логин/Email">
                <constraints nullable="false" notNullConstraintName="nn_user_login" unique="true" uniqueConstraintName="uniq_user"/>
            </column>
            <column name="password" type="varchar(1000)" remarks="Пароль">
                <constraints nullable="false" notNullConstraintName="nn_user_password"/>
            </column>
            <column name="info" type="varchar(100)" remarks="Информация">
                <constraints nullable="false" notNullConstraintName="nn_user_info"/>
            </column>
            <column name="is_admin" type="number(1)" remarks="Администратор" defaultValue="0">
                <constraints nullable="false" notNullConstraintName="nn_user_admin"/>
            </column>
            <column name="is_active" type="number(1)" remarks="Активен" defaultValue="0">
                <constraints nullable="false" notNullConstraintName="nn_user_activa"/>
            </column>
            <column name="teacher_id" type="number" remarks="Учитель">
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="log_user" baseColumnNames="teacher_id"
                                 constraintName="fk_user_teacher" referencedTableName="log_teacher"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (2)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_class"/>
            </not>
        </preConditions>
        <createTable tableName="log_class" remarks="Учебный класс">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" notNullConstraintName="nn_class_name" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (3)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="log_class"/>
                <not>
                    <tableExists tableName="log_student"/>
                </not>
            </and>
        </preConditions>
        <createTable tableName="log_student" remarks="Ученик">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="person_id" type="number">
                <constraints nullable="false" notNullConstraintName="nn_student_person"/>
            </column>
            <column name="class_id" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (4)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_student_class"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint
                baseTableName="log_student"
                baseColumnNames="class_id"
                referencedTableName="log_class"
                referencedColumnNames="id"
                constraintName="fk_student_class"
                onDelete="SET NULL"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (5)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="log_person"/>
            <tableExists tableName="log_student"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_student_person"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint
                baseTableName="log_student"
                baseColumnNames="person_id"
                referencedTableName="log_person"
                referencedColumnNames="id"
                constraintName="fk_student_person"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (6)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_teacher"/>
            </not>
        </preConditions>
        <createTable tableName="log_teacher" remarks="Учитель">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="person_id" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (7)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="log_person"/>
            <tableExists tableName="log_teacher"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_teacher_person"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint
                baseTableName="log_teacher"
                baseColumnNames="person_id"
                referencedTableName="log_person"
                referencedColumnNames="id"
                constraintName="fk_teacher_person"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (8)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_subject"/>
            </not>
        </preConditions>

        <createTable tableName="log_subject">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(1000)" remarks="Название предмета">
                <constraints nullable="false" notNullConstraintName="nn_subject_01" unique="true"
                             uniqueConstraintName="subject_uniq"/>
            </column>
            <column name="comment" type="varchar(1000)" remarks="Дополнительный комментарий">
                <constraints nullable="false" notNullConstraintName="nn_subject_02" unique="true"
                             uniqueConstraintName="subject_uniq"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (9)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_exercise"/>
            </not>
        </preConditions>

        <createTable tableName="log_exercise">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(1000)" remarks="Название предмета">
                <constraints nullable="false" notNullConstraintName="nn_exercise_01"/>
            </column>
            <column name="comment" type="varchar(1000)" remarks="Дополнительный комментарий">
                <constraints nullable="false" notNullConstraintName="nn_exercise_02"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (10)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_attachment"/>
            </not>
        </preConditions>

        <createTable tableName="log_attachment">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(100)" remarks="Отображаемый текст">
                <constraints nullable="false" notNullConstraintName="nn_attachment_01"/>
            </column>
            <column name="href" type="varchar(4000)" remarks="Ссылка">
                <constraints nullable="false" notNullConstraintName="nn_attachment_02"/>
            </column>
            <column name="exercise_id" type="number">
                <constraints nullable="false" notNullConstraintName="nn_attachment_03"
                             referencedTableName="log_exercise" referencedColumnNames="id"
                             foreignKeyName="fk_attachment_exercise" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 init (11)" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_lesson"/>
            </not>
        </preConditions>

        <createTable tableName="log_lesson" remarks="Урок">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="teacher_id" type="number"/>
            <column name="class_id" type="number"/>
            <column name="date" type="timestamp">
                <constraints nullable="false" notNullConstraintName="nn_lesson_date"/>
            </column>
            <column name="subject_id" type="number">
                <constraints nullable="false" notNullConstraintName="nn_lesson_subject"
                             referencedTableName="log_subject" referencedColumnNames="id"
                             foreignKeyName="fk_lesson_subject" deleteCascade="true"/>
            </column>
            <column name="status" type="varchar(30)" remarks="Признак урока"/>
            <column name="title" type="varchar(1000)" remarks="Основная тема урока">
                <constraints nullable="false" notNullConstraintName="nn_lesson_title"/>
            </column>
            <column name="sick_exercise" type="number" remarks="Задание для болеющих"/>
            <column name="self_exercise" type="number" remarks="Задание для всех"/>
            <column name="control_exercise" type="number" remarks="Контрольное задание"/>
        </createTable>
    </changeSet>

    <changeSet id="2025.08.22.1245 user students" author="avmakarov">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log_user_students"/>
            </not>
        </preConditions>

        <createTable tableName="log_user_students" remarks="Привязанные ученики">
            <column name="user_id" type="number">
                <constraints primaryKey="true" referencedTableName="log_user"
                             referencedColumnNames="id" foreignKeyName="user_students_user"
                             deleteCascade="true"/>
            </column>
            <column name="student_id" type="number">
                <constraints primaryKey="true" referencedTableName="log_student"
                             referencedColumnNames="id" foreignKeyName="user_students_student"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>